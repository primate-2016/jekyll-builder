#!/usr/bin/env bash

if
  [[ -s "/home/ec2-user/jekyll-builder/jekyll-builder/vendor/bundle/ruby/2.5.0/environment" ]]
then
  source "/home/ec2-user/jekyll-builder/jekyll-builder/vendor/bundle/ruby/2.5.0/environment"
  exec ruby "$@"
else
  echo "ERROR: Missing RVM environment file: '/home/ec2-user/jekyll-builder/jekyll-builder/vendor/bundle/ruby/2.5.0/environment'" >&2
  exit 1
fi
